{
  "name": "nevio-api-tests",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:smoke": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/smoke",
    "test:regression": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/regression",
    "test:report": "npm test && npm run allure:generate && npm run allure:open",
    "test:smoke:report": "npm run test:smoke && npm run allure:generate && npm run allure:open",
    "test:regression:report": "npm run test:regression && npm run allure:generate && npm run allure:open",
    "gen:tests": "node tools/ai/generate-tests.mjs",
    "allure:clean": "rimraf allure-results allure-report",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:open": "npx allure open allure-report",
    "allure:serve": "npx allure serve allure-results",
    "report": "npm run allure:generate && npm run allure:open"
  },
  "devDependencies": {
    "allure-commandline": "^2.24.1",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "jest-allure2-reporter": "^2.0.0-beta.6",
    "rimraf": "^3.0.2",
    "xlsx": "^0.18.5"
  },
  "dependencies": {
    "openai": "^4.60.0",
    "playwright": "^1.45.0",
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=18"
  }
}
